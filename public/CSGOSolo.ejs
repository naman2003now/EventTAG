        <!-- <img src="resources/Frame 52.svg" alt="frame" class="frame" /> -->
        <video
            class="frame"
            autoplay
            muted
            loop
            style="
                position: absolute;
                margin: 0;
                left: 0;
                top: 0;
                z-index: -1;
                height: 100%;
            "
        >
            <source src="resources/CSGO Animation.mp4" type="video/mp4" />
        </video>
        <script>
            setInterval(() => window.scrollTo(0, 0), 0);
        </script>
        <form action="/CSGOSolo" method="post" id="form">
            <div class="form">
                <h1>Play CSGO Solo</h1>
                <div class="formField">
                    <input
                        id="fullName"
                        name="fullName"
                        type="text"
                        placeholder="Full Name"
                        required
                    />
                </div>
                <div class="formField">
                    <input
                        id="regno"
                        name="RegistrationNumber"
                        type="text"
                        placeholder="Registration Number"
                        required
                    />
                </div>
                <div class="formField">
                    <input
                        id="mail"
                        name="VitMail"
                        type="text"
                        placeholder="Vit Mail"
                        required
                    />
                </div>
                <div class="formField">
                    <input
                        id="rank"
                        name="rank"
                        type="text"
                        placeholder="Rank"
                    />
                </div>
                <div class="formField">
                    <input
                        id="gameId"
                        name="gameId"
                        type="text"
                        placeholder="Steam profile Link"
                        required
                    />
                </div>
                <div class="formField">
                    <input
                        id="discord"
                        name="discord"
                        type="text"
                        placeholder="Discord ID"
                        required
                    />
                </div>
                <div class="formField">
                    <input
                        id="phno"
                        name="phoneNumber"
                        type="tel"
                        placeholder="Phone Number"
                        required
                    />
                </div>
                <div class="buttons">
                    <button name="submit" type="submit" form="form">
                        Submit
                    </button>
                </div>
            </div>
        </form>
    </body>
</html>
